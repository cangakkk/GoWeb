@using GoWeb.Models
@model VMView

@{
    Layout = null;
}

<div class="h2">Category</div>
<br>
<div class="card">
    <form id="frmDeleteCategory" method="post" asp-action="Delete">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="card-header">Delete Menu</div>
        <div class="card-body">
            <div class="mb-3">
                <p class="h4">Are you SURE want to remove Data?</p>
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-danger" id="btnSave"><i class="fas fa-trash-alt"></i></button>
            <button type="Button" class="btn btn-primary" id="btnCancel">Cancel</button>
        </div>
    </form>
</div>

<script>
    $("#btnCancel").click(function () {
        $("#MyModal").modal("hide");
    });
</script>
