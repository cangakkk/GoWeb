@using GoWeb.Models
@{
    Layout = null;
}

<div class="h2">Add Data</div>
<br>
<div class="card">
  <form id="frmVariant" method="post" asp-action="Add">
    <div class="card-header">Create New</div>
        <div class="card-body">
            <div class="mb-3">
               <label>Name</label>
               <input type="text" name="Name" class="form-control"/>
            </div>
            <div class="mb-3">
                <label>Email</label>
                <input type="email" name="Email" class="form-control"/>
            </div>
            <div class="mb-3">
                <label>Address</label>
                <input type="text" name="Address" class="form-control" />
            </div>
        </div>
        <div class="card-footer"> 
            <button type="submit" class="btn btn-primary" id="btnSave">Create</button>
            <button type="button" class="btn btn-primary" id="btnCancel"> Cancel </button>
        </div>
   </form>
</div>

<script>
    $("#btnCancel").click(function () {
        $("#MyModal").modal("hide");
    });

    $("#frmVariant").validate({
        errorClass: "text-danger",
        rules:{
            Name: "required",
            Email: "required",
            Address: "required"
        }
    });
</script>